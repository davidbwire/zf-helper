                            echo $this->form()->openTag($form);
                            ?>
                            <div class='form-group'>
                                <?php echo $this->formLabel($form->get('newCredential')); ?>
                                <?php
                                $elementNewCredential = $form->get('newCredential');
                                $elementNewCredential->setAttribute('class',
                                        'form-control');
                                echo $this->formInput($elementNewCredential) . $this->formElementErrors($elementNewCredential);
                                ?>
                            </div>
                            <div class="form-group">
                                <?php
                                echo $this->formLabel($form->get('newCredentialVerify'));
                                $elementNewCredentialVerify = $form->get('newCredentialVerify');
                                $elementNewCredentialVerify->setAttribute('class',
                                        'form-control');
                                echo $this->formInput($elementNewCredentialVerify) . $this->formElementErrors($elementNewCredentialVerify);
                                ?>
                            </div>
                            <div class="form-group">
                                <?php
                                $submit = $form->get('submit');
                                $submit->setAttribute('class',
                                        'btn btn-lg btn-success btn-block');
                                echo $this->formButton($submit);
                                ?>
                            </div>
                            <?php echo $this->form()->closeTag(); ?>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>