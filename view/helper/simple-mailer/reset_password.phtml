<div class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class='col-md-4 col-md-offset-4'>
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h2 class='text-center'><?php echo $this->translate('Change Password'); ?></h2>
                            </div>
                        </div>
                        <div class="panel-body">
                            <p><strong><?php
                                    echo sprintf($this->translate('Email %s'),
                                            $this->escapeHtml($this->email));
                                    ?></strong></p>
                            <?php
                            $this->layout('layout/reset_password');
                            $form = $this->resetForm;

                            $form->prepare();
                            $form->setAttribute('action',
                                    $this->url('reset_password',
                array('userId' => $this->userId, 'token' => $this->token)));
